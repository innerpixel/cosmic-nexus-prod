# Server Configuration
NODE_ENV=development
PORT=3000

# Mail Server Configuration (cosmical.me)
MAIL_HOST=mail.cosmical.me
MAIL_PORT=587
MAIL_USER=noreply@cosmical.me
MAIL_PASSWORD=your_smtp_password
MAIL_FROM=Cosmic Nexus <noreply@cosmical.me>

# Mail Account Management API (cosmical.me)
MAIL_API_ENDPOINT=https://mail.cosmical.me/api/v1
MAIL_ADMIN_USER=admin@cosmical.me
MAIL_ADMIN_PASSWORD=your_admin_password

# Development Settings
DEV_PREFIX=dev-
DEV_QUOTA_MB=100

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
