# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# Mail Server Configuration (cosmical.me)
MAIL_HOST=mail.cosmical.me
MAIL_PORT=587
MAIL_USER=admin@cosmical.me
MAIL_PASSWORD=your-secure-password
MAIL_FROM=noreply@cosmical.me
MAIL_SECURE=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cosmic-nexus

# Storage Configuration
STORAGE_PATH=./storage/dev

# Web Domain Configuration
WEB_DOMAIN=csmcl.space
